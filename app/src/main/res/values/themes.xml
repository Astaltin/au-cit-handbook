<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AUStudentHandbook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/white_100</item>
        <item name="colorOnPrimary">@color/white_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AUStudentHandbook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AUStudentHandbook.BackActionBar" parent="Theme.MaterialComponents.Light">
        <item name="actionBarStyle">@style/BackActionBar</item>

        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/white_100</item>

        <item name="colorSecondary">@color/blue_700</item>

        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="BackActionBar" />

    <style name="Theme.AUStudentHandbook.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Theme.AUStudentHandbook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>