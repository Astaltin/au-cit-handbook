<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.faq.FaqFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/phinma_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_200"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/phinma_logo_vertical_spacing"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/phinma_logo_vertical_spacing"
                app:layout_constraintBottom_toTopOf="@+id/about_phinma"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/phinma_logo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_phinma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_100"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/phinma_logo_vertical_spacing"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_spacing"
                app:layout_constraintBottom_toTopOf="@+id/mission"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phinma_logo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:background="@drawable/bg_blue_rounded"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="15dp"
                    android:text="FAQ"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/heading_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="What is CIT Informative Guide?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="CIT Informative Guide is your digital roadmap to success within CIT. Packed with features and functionalities, it offers practical tips, curated resources, event updates, faculty profiles, and feedback mechanisms. Stay informed and engaged with the latest events and networking opportunities, access curated resources and tutorials, get to know your faculty, and never miss a class with our scheduling feature."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="What features does CIT Informative Guide offer?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="CIT Informative Guide offers various features including college tips, IT tips, event updates, links to programming channels, faculty profiles, schedule management, and a feedback survey for continuous improvement."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Who can use CIT Informative Guide?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="CIT Informative Guide is specifically designed for students enrolled in the College of Information Technology (CIT). However, anyone interested in learning more about CIT events, resources, and faculty can also benefit from using the app."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Is CIT Informative Guide available for all mobile platforms?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="Currently, CIT Informative Guide is available for Android devices. However, plans for expanding to other platforms such as iOS may be considered in the future."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="How can I provide feedback or suggest improvements for CIT Informative Guide?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="You can provide feedback and suggestions for CIT Informative Guide through the app's feedback survey feature. Your input is valuable in helping us enhance the app and better serve the CIT community."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Are the resources and tips provided in CIT Informative Guide relevant to all CIT students?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="Yes, the resources and tips provided in CIT Informative Guide are curated to be relevant and beneficial for all CIT students, including freshmen and upperclassmen. Whether you're just starting your journey in IT academia or furthering your studies, you'll find valuable information tailored to your needs."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="How frequently are event updates and new resources added to CIT Informative Guide?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="Event updates and new resources are added to CIT Informative Guide regularly to ensure that students have access to the latest information and resources. You can stay informed by checking the app regularly or enabling notifications for important updates."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Can I access CIT Informative Guide offline?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_vertical_spacing"
                    android:fontFamily="@font/roboto"
                    android:text="While some features of CIT Informative Guide may require an internet connection to access real-time updates, resources, and event information, certain sections of the app may be accessible offline for your convenience."
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_normal"
                    app:lineHeight="@dimen/body_lineHeight_normal" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>